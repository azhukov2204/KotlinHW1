<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewText"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:hint="@string/editTextHint"
        android:inputType="text" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/button1Text" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow>

            <Button
                android:id="@+id/readVal1Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/readVal1ButtonText"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/readVal2Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/readVal2ButtonText"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/showVal1Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/showVal1ButtonText"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/showVal2Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/showVal2ButtonText"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/copyDataToObject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/copyDataToObjectText"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/showVal1FromObjectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/showVal1FromObjectButtonText"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/showVal2FromObjectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/showVal2FromObjectButtonText"
                tools:ignore="ButtonStyle" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/printValuesFromLoops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/printValuesFromLoops"
        tools:ignore="ButtonStyle" />

</LinearLayout>
